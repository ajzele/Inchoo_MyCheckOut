<config>
    <modules>
        <Inchoo_MyCheckOut>
            <version>1.0.0.0</version>
        </Inchoo_MyCheckOut>
    </modules>
    <global>
        <models>
            <inchoo_mycheckout>
                <class>Inchoo_MyCheckOut_Model</class>
            </inchoo_mycheckout>
        </models>
        <helpers>
            <inchoo_mycheckout>
                <class>Inchoo_MyCheckOut_Helper</class>
            </inchoo_mycheckout>
        </helpers>
        <blocks>
            <inchoo_mycheckout>
                <class>Inchoo_MyCheckOut_Block</class>
            </inchoo_mycheckout>
        </blocks>
    </global>
    <frontend>
        <routers>
            <inchoo_mycheckout>
                <use>standard</use>
                <args>
                    <module>Inchoo_MyCheckOut</module>
                    <frontName>pbzmycheckout</frontName>
                </args>
            </inchoo_mycheckout>
        </routers>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Inchoo_MyCheckOut>
                    <files>
                        <default>Inchoo_MyCheckOut.csv</default>
                    </files>
                </Inchoo_MyCheckOut>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <inchoo_mycheckout>
            	<model>inchoo_mycheckout/payment</model>
                <active>0</active>
            	<title><![CDATA[PBZ MyCheckOut (Redirect)]]></title>
                <payment_action><![CDATA[preauth]]></payment_action>
                <mycheckout_post_url><![CDATA[https://mycheckout.pbzcard.hr/icheckout/]]></mycheckout_post_url>
                <pending_order_status><![CDATA[pending]]></pending_order_status>
                <payed_order_status><![CDATA[processing]]></payed_order_status>
                <canceled_order_status><![CDATA[canceled]]></canceled_order_status>                
                <debug>0</debug>
            </inchoo_mycheckout>
        </payment>
    </default>
</config>
